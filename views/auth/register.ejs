<%-include('../partials/header.ejs')%>
<h1>Register</h1>

<%=message%>

<div class="card" style="width: 30rem;">
<form method='POST' action="/auth/register" enctype="multipart/form-data">
  <div class="form-group user">
    <label for="username">Username</label>
    <input type="text" class="form-control col-10" id="username" name="username" aria-describedby="emailHelp" placeholder="Enter email">
  </div>
  <div class="form-group pass">
    <label for="password">Password</label>
    <input type="password" class="form-control col-10" id="password" name="password" placeholder="Password">
    
  </div>
  <div class="form-group pass">
    <label for="firstName">First Name</label>
    <input type="text" class="form-control col-10" id="firstName" name="firstName" placeholder="First Name">
    <small id=''></small>
  </div>
  <div class="form-group pass">
    <label for="lastName">Last Name</label>
    <input type="text" class="form-control col-10" id="lastName" name="lastName" placeholder="Last Name">
  </div>
  <div class="form-group pass">
    <label for="city">City</label>
    <input type="password" class="form-control col-10" id="city" name="city" placeholder="City">
  </div>
  <div class="form-group pass">
    <label for="favoritePlace">Favorite Place</label>
    <input type="text" class="form-control col-10" id="favoritePlace" name="favoritePlace" placeholder="Favorite Place">
    <small id=''></small>
  </div>
  <div class="form-group pass">
    <label for="about">About</label>
    <input type="text" class="form-control col-10" id="about" name="about" placeholder="About">
  </div>
  <div class="form-group pass">
    <label for="image">Photo</label>
    <input type="file" class="form-control col-10" id="image" name="image" />
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>

<script type="text/javascript">
 $('form').submit( (e) => {
  
  const inputs = $('input')
  
  for(let i =0; i < inputs.length; i++){

    const input = $(inputs[i])
    if (input.val() === ''){
      if (input.parent().children().length !== 3){
        input.parent().append('<small class="required">This Field Is Required</small>')
        

      }
      
      e.preventDefault()
    }



  }

  
})  
</script>

<%-include('../partials/footer.ejs')%>