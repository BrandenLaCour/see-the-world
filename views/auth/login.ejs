<%-include('../partials/header.ejs')%>
<h1>Login</h1>

<%=message%>

<div class="card" style="width: 30rem;">
<form method='POST' action="/auth/login">
  <div class="form-group user">
    <label for="exampleInputEmail1">Username</label>
    <input type="text" class="form-control col-10" id="username" name="username" aria-describedby="emailHelp" placeholder="Enter email">
    <small id='userVal'></small>
  </div>
  <div class="form-group pass">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control col-10" id="password" name="password" placeholder="Password">
    <small id='passVal'></small>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>

<script type="text/javascript">
 $('form').submit( () => {
  //asdlfkjdsal;f
  const username = $('#username').val()
  const password = $('#password').val()
  
  if (!username){
    event.preventDefault()
    $('#userVal').text('Username Required').css({'color': 'red'})
   
  }
  else if (!password) {
    event.preventDefault()
    $('#passVal').text('Password Required').css({'color': 'red'})
 
  }
})  
</script>

<%-include('../partials/footer.ejs')%>