<%- include('../partials/header.ejs')%>


<h1 class='title'>See The World</h1>
<h3  class='title'><%=message%></h3>
<div class="article-container">
	
<% for(let i = 0; i < articles.length; i++) {%>
				
<div class="card article" style="width: 30rem;">
	<a href="/articles/<%=articles[i].id%>" >
	<img src="<%=cloudinary.url(articles[i].imageId)%>" class="card-img-top" alt="..."> 
		
	</a>
  <div class="card-body">
  	<p><%=articles[i].title%></p>
  	<small class='signature'>By: <%=articles[i].author ? `${articles[i].author.firstName} ${articles[i].author.lastName}` : 'Author Deleted' %></small>
  	<small><%=articles[i].date.toLocaleString()%></small>
  </div>
</div>
	
<%}%>


</div>


<%- include('../partials/footer.ejs')%>