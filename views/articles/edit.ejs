<%-include('../partials/header.ejs')%>
<h1 class='title'></h1>
<div class="content-container">
    <div class="card form" style="width: 30rem;">
      <div class="card-body">

             <h3 class='title'> Edit Article</h3>
       
      <div class="row justify-content-center">
        <div class="col-5">
          <h3 class='title'><div class='form-underline'></div></h3>
        </div>
      </div>
            
<form method='POST' action="/articles/<%=article._id%>?_method=PUT" enctype="multipart/form-data">
  <div class="form-group title">
    <label for="title">Title</label>
    <input type="text" class="form-control col-10" id="title" name="title" value='<%=article.title%>'>
  </div>
  <div class="form-group description">
    <label for="description">Description</label>
    <textarea type="text" class="form-control col-10" id="description" name="description"><%=article.description%></textarea>
    
  </div>
  <div class="form-group tips">
  <label for="title">Tips</label>
    <textarea type="text" class="form-control col-10" id="tips" name="tips"><%=article.tips%></textarea>

  </div>
  <div class="form-group location">
    <label for="location">Location</label>
    <input type="text" class="form-control col-10" id="location" name="location" value='<%=article.location%>'>
  </div>
  <div class="form-group image">
    <label for="image">Photo</label>
    <input type="file" class="form-control col-10" id="image" name="image" />
    <small class='required'></small>
  </div>
  <div class="row justify-content-center">
    <div class="col-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
  
</form>
 </div>
</div>

</div>


<script type="text/javascript">
 $('form').submit( (e) => {
  
  const inputs = $('input')
  const tips = $('#tips')
  
  for(let i =0; i < inputs.length; i++){

    const input = $(inputs[i])
    if (input.val() === ''){
      if (input.parent().children().length !== 3){
        input.parent().append('<small class="required">This Field Is Required</small>')
         e.preventDefault()
      }
      
        
    }
  }
  
})  
</script>

<%-include('../partials/footer.ejs')%>