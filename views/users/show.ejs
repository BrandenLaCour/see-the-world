<%- include('../partials/header.ejs')%>


<div class="content-container">
	<div class="card mt-10 card-round" style="width: 37%;" >
	<img src="<%=!user.imageUrl ? cloudinary.url(user.imageId) : user.imageUrl%>" class="card-img-top" style='height: 50vh;'>
	<div class="card-body">
		<div class="row justify-content-center ">
	
	<h3 class="card-title col-4 col-md-6"><%=user.firstName%> <%=user.lastName%></h3>
	</div>
	<div class=" row justify-content-center">
		<h5 class="card-title col-3 col-md-3"><%=user.city%></h5>
	</div>
	
	<div class="row">
		<p class="card-title"><strong class='mr-2'>About:</strong> <%=user.about%></p>
	</div>
	<div class="row">
		<p class="card-title"><strong class='mr-2'>Favorite Place:</strong> <%=user.favoritePlace%></p>
	</div>
	<div class="row justify-content-center">
	<a href="/users/<%=user._id%>/articles" class="btn btn-primary col-6 col-xl-3 col-lg-4 "><%=user.firstName%>'s Articles</a>
	</div>
</div>


	</div>

	

</div>



<%- include('../partials/footer.ejs')%>