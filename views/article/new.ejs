<%-include('../partials/header.ejs')%>
<h1>Create a New Article</h1>

<div class="card" style="width: 30rem;">
<form method='POST' action="/articles/new" enctype="multipart/form-data">
  <div class="form-group title">
    <label for="title">Title</label>
    <input type="text" class="form-control col-10" id="title" name="title" placeholder="Enter title">
  </div>
  <div class="form-group description">
    <label for="description">Description</label>
    <textarea type="text" class="form-control col-10" id="description" name="description" placeholder="Enter Description"></textarea>
    
  </div>
  <div class="form-group tips">
  <label for="title">Tips</label>
    <textarea type="text" class="form-control col-10" id="tips" name="tips" placeholder="Enter tips"></textarea>

  </div>
  <div class="form-group location">
    <label for="location">Location</label>
    <input type="text" class="form-control col-10" id="location" name="location" placeholder="Enter Location">
  </div>
  <div class="form-group image">
    <label for="image">Photo</label>
    <input type="file" class="form-control col-10" id="image" name="image" />
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>

<script type="text/javascript">
 $('form').submit( (e) => {
  
  const inputs = $('input')
  const tips = $('#tips')
  
  for(let i =0; i < inputs.length; i++){

    const input = $(inputs[i])
    if (input.val() === ''){
      if (input.parent().children().length !== 3){
        input.parent().append('<small class="required">This Field Is Required</small>')

      }
      
      e.preventDefault()
    }
    if(tips.val() === '') {
      if(tips.parent().children().length !== 3) {
        tips.parent().append('<small class="required">This Field Is Required</small>')
      }
    }
  }
  
})  
</script>

<%-include('../partials/footer.ejs')%>